@page "/crossOvers"
@inject HttpClient Http

<h1 class="page-header">Cross Over Comics</h1>
@if (crossovers == null)
{
    <p><em>Loading...</em></p>
}
else
{

    @foreach (var crossover in crossovers)
    {
        <div class="row">
            <div class="col-lg col-md col-sm right">
                <h2>@crossover.title</h2><br>
                <!--<p>Check out the episode <a href=@guest.episode target="_top">here.</a></p>-->
                @if (crossover.youtubelink != "")
                {
                    <p>Check the episode <a href=@crossover.youtubelink target="_top">here.</a></p>
                }
                else
                {
                    //<p><b>Episode Link: </b>Information coming soon...</p>
                }
                @if (crossover.releasedate != "")
                {
                    <p>Episode release: @crossover.youtubelink</p>

                }
                else
                {
                    //<p><b>Episode release date: </b>Information coming soon...</p>
                }
            </div>
        </div>
    }
}




@code {
    private Crossover[] crossovers;

    protected override async Task OnInitializedAsync()
    {
        crossovers = await Http.GetFromJsonAsync<Crossover[]>("crossover/crossovers.json");
    }

    public class Crossover
    {
        public int episode { get; set; }
        public string title { get; set; }
        public string releasedate { get; set; }
        public string youtubelink { get; set; }
    }
}

